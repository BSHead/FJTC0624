<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/li_layout"
    android:background="@color/white"
    android:orientation="vertical">


    <include layout="@layout/layout_toolbar" />


    <com.foorich.auscashier.view.FlexibleScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_40"
                android:layout_marginLeft="@dimen/qb_px_26"
                android:layout_marginRight="@dimen/qb_px_26"
                android:layout_marginTop="@dimen/qb_px_20"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银行卡账户类型"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size" />


                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_10"
                    android:layout_weight="1"
                    android:hint="请选择账户类型"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size" />


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/qb_px_12"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.1"
                    android:src="@mipmap/bb_yf" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/qb_px_26"
                android:layout_marginRight="@dimen/qb_px_20"
                android:layout_marginTop="@dimen/qb_px_15"
                android:background="@color/button" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_40"
                android:layout_marginLeft="@dimen/qb_px_26"
                android:layout_marginRight="@dimen/qb_px_26"
                android:layout_marginTop="@dimen/qb_px_20"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开户人"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size" />

                <com.foorich.auscashier.view.MClearEditText
                    android:id="@+id/ed_account_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_10"
                    android:hint="请输入开户人"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size"
                    app:mClearEditText_showBottomLine="false" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/qb_px_26"
                android:layout_marginRight="@dimen/qb_px_20"
                android:layout_marginTop="@dimen/qb_px_15"
                android:background="@color/button" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_40"
                android:layout_marginLeft="@dimen/qb_px_26"
                android:layout_marginRight="@dimen/qb_px_26"
                android:layout_marginTop="@dimen/qb_px_20"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开户银行"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size" />


                <TextView
                    android:id="@+id/tv_deposit_bank"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_10"
                    android:layout_weight="1"
                    android:hint="请选择开户银行"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size" />


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/qb_px_12"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="0.1"
                    android:src="@mipmap/bb_yf" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/qb_px_26"
                android:layout_marginRight="@dimen/qb_px_20"
                android:layout_marginTop="@dimen/qb_px_15"
                android:background="@color/button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_40"
                android:layout_marginLeft="@dimen/qb_px_26"
                android:layout_marginRight="@dimen/qb_px_26"
                android:layout_marginTop="@dimen/qb_px_20"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开户支行"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size" />

                <com.foorich.auscashier.view.MClearEditText
                    android:id="@+id/ed_account_branch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_10"
                    android:hint="请填写开户支行名称"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size"
                    app:mClearEditText_showBottomLine="false" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/qb_px_26"
                android:layout_marginRight="@dimen/qb_px_20"
                android:layout_marginTop="@dimen/qb_px_15"
                android:background="@color/button" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_40"
                android:layout_marginLeft="@dimen/qb_px_26"
                android:layout_marginRight="@dimen/qb_px_26"
                android:layout_marginTop="@dimen/qb_px_20"
                android:gravity="center|left"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银行卡号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size" />

                <com.foorich.auscashier.view.MClearEditText
                    android:id="@+id/ed_bankcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_10"
                    android:hint="请填写开户银行账号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size"
                    android:inputType="number"
                    app:mClearEditText_showBottomLine="false" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/qb_px_26"
                android:layout_marginRight="@dimen/qb_px_20"
                android:layout_marginTop="@dimen/qb_px_15"
                android:background="@color/button" />

            <Button
                android:id="@+id/btn_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_30"
                android:background="@mipmap/button1"
                android:gravity="center"
                android:text="下一步"
                android:textColor="@color/white"
                android:textSize="@dimen/title_size" />


        </LinearLayout>
    </com.foorich.auscashier.view.FlexibleScrollView>
</LinearLayout>