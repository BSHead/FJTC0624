<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_margin="@dimen/qb_px_15"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/img_payment_color"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="@dimen/qb_px_3"
            android:src="@drawable/shape_dot" />

        <TextView
            android:id="@+id/tv_payment_payTypeDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:src="@drawable/shape_dot"
            android:text="支付宝"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size" />


        <TextView
            android:id="@+id/tv_payment_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="97dp"
            android:src="@drawable/shape_dot"
            android:text="6.25%"
            android:textColor="@color/orangered"
            android:textSize="@dimen/title_size" />

    </RelativeLayout>

</LinearLayout>