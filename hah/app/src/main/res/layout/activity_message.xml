<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <com.foorich.auscashier.view.FlexibleScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="消息"
                    android:textColor="@color/black"
                    android:textSize="@dimen/titleTop_size"
                    android:textStyle="bold" />

            </RelativeLayout>


            <!--    <ListView
                    android:id="@+id/lv_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/qb_px_15"
                    android:divider="#00000000"
                    android:dividerHeight="0dp"></ListView>-->

            <LinearLayout
                android:id="@+id/li_system"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_40"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:layout_marginRight="@dimen/qb_px_5"
                android:layout_marginTop="@dimen/qb_px_20"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_dot_system"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@drawable/shape_dot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/qb_px_5"
                    android:layout_weight="3"
                    android:text="系统公告"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size" />


                <ImageView
                    android:layout_width="@dimen/qb_px_12"
                    android:layout_height="@dimen/qb_px_12"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/sy_jt" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:layout_marginRight="@dimen/qb_px_20"
                android:layout_marginTop="@dimen/qb_px_15"
                android:background="@color/button" />

            <LinearLayout
                android:id="@+id/li_trading"
                android:layout_width="match_parent"
                android:layout_height="@dimen/qb_px_40"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:layout_marginRight="@dimen/qb_px_5"
                android:layout_marginTop="@dimen/qb_px_20"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_dot_trading"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@drawable/shape_dot" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/qb_px_5"
                    android:layout_weight="3"
                    android:text="交易推送"
                    android:textColor="@color/black"
                    android:textSize="@dimen/title_size" />


                <ImageView
                    android:layout_width="@dimen/qb_px_12"
                    android:layout_height="@dimen/qb_px_12"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/sy_jt" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/qb_px_20"
                android:layout_marginRight="@dimen/qb_px_20"
                android:layout_marginTop="@dimen/qb_px_15"
                android:background="@color/button" />

        </LinearLayout>
    </com.foorich.auscashier.view.FlexibleScrollView>
</LinearLayout>