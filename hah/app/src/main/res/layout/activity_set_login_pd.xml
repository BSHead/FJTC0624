<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="设置新登录密码"
            android:textColor="@color/black"
            android:textSize="@dimen/titleTop_size"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_26"
        android:layout_marginRight="@dimen/qb_px_26"
        android:layout_marginTop="@dimen/qb_px_58"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="新密码"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size" />

        <com.foorich.auscashier.view.MClearEditText
            android:id="@+id/ed_new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="请输入新登录密码"
            android:maxLength="12"
            android:password="true"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size"
            app:mClearEditText_showBottomLine="false" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="@dimen/qb_px_26"
        android:layout_marginRight="@dimen/qb_px_26"
        android:layout_marginTop="@dimen/qb_px_10"
        android:background="@color/button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_26"
        android:layout_marginRight="@dimen/qb_px_26"
        android:layout_marginTop="@dimen/qb_px_10"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="确认新密码"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size" />

        <com.foorich.auscashier.view.MClearEditText
            android:id="@+id/ed_affirm_new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="再次输入新登录密码"
            android:maxLength="12"
            android:password="true"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size"
            app:mClearEditText_showBottomLine="false" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="@dimen/qb_px_26"
        android:layout_marginRight="@dimen/qb_px_26"
        android:layout_marginTop="@dimen/qb_px_10"
        android:background="@color/button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_26"
        android:layout_marginRight="@dimen/qb_px_26"
        android:layout_marginTop="@dimen/qb_px_20"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6到12个字符，含字母、数字、符号至少两种"
            android:textColor="@color/black"
            android:textSize="@dimen/small_size" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_change_pd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_30"
        android:background="@mipmap/button1"
        android:text="确定修改密码"
        android:textColor="@color/white"
        android:textSize="@dimen/title_size" />

</LinearLayout>