<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:srl="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <com.foorich.auscashier.view.refresh.library.TwinklingRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.foorich.auscashier.view.MyScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_20"
                        android:text="首页"
                        android:textColor="@color/black"
                        android:textSize="@dimen/titleTop_size"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/qb_px_130"
                        android:layout_marginLeft="@dimen/qb_px_10"
                        android:layout_marginRight="@dimen/qb_px_10"
                        android:layout_marginTop="@dimen/qb_px_10"
                        android:background="@mipmap/sy_bg">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/li_gathering"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/qb_px_20"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/qb_px_39"
                                    android:layout_height="@dimen/qb_px_37"
                                    android:src="@mipmap/sy_sk" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/qb_px_5"
                                    android:text="@string/rq_code1"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/btn_verification_code" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/li_gathering_code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/qb_px_20"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/qb_px_39"
                                    android:layout_height="@dimen/qb_px_37"
                                    android:src="@mipmap/sy_skm" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/qb_px_5"
                                    android:text="@string/rq_code2"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/btn_verification_code" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/li_statement"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/qb_px_20"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/qb_px_39"
                                    android:layout_height="@dimen/qb_px_37"
                                    android:src="@mipmap/sy_bb" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/qb_px_5"
                                    android:text="@string/statement"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/btn_verification_code" />

                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <!--        <com.foorich.auscashier.view.refres.PullRefreshLayout
                                android:id="@+id/refresh_layout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                srl:refreshMode="both"
                                android:orientation="vertical"
                                tools:layout_editor_absoluteX="8dp"
                                tools:layout_editor_absoluteY="0dp">-->

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/qb_px_50"
                        android:layout_marginLeft="@dimen/qb_px_23"
                        android:layout_marginRight="@dimen/qb_px_23"
                        android:layout_marginTop="@dimen/qb_px_6"
                        android:background="@mipmap/sy_banner" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/qb_px_21"
                        android:layout_marginLeft="@dimen/qb_px_23"
                        android:layout_marginRight="@dimen/qb_px_23"
                        android:layout_marginTop="@dimen/qb_px_10"
                        android:orientation="horizontal">


                        <ImageView
                            android:layout_width="@dimen/qb_px_65"
                            android:layout_height="@dimen/qb_px_19"
                            android:layout_gravity="center"
                            android:src="@mipmap/sy_xfkb" />

                        <ImageView
                            android:layout_width="@dimen/qb_px_23"
                            android:layout_height="@dimen/qb_px_21"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/qb_px_6"
                            android:src="@mipmap/sy_skts" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/qb_px_6"
                            android:text="@string/pay_success"
                            android:textSize="@dimen/home" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/collection_time"
                            android:textSize="@dimen/home" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_23"
                        android:layout_marginRight="@dimen/qb_px_23"
                        android:layout_marginTop="@dimen/qb_px_10"
                        android:text="@string/data"
                        android:textColor="@color/black"
                        android:textSize="@dimen/edit_hint" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/qb_px_23"
                        android:layout_marginTop="@dimen/qb_px_10"
                        android:text="@string/cash_summary"
                        android:textSize="@dimen/btn_verification_code" />


                    <com.foorich.auscashier.view.shadowlayout.ShadowLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/qb_px_80"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/qb_px_23"
                        android:layout_marginRight="@dimen/qb_px_23"
                        android:layout_marginTop="@dimen/qb_px_10"
                        android:background="#fff"
                        android:padding="1dp"
                        app:l_radius="3dp"
                        app:l_shadowAlpha="0.6"
                        app:l_shadowElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableRight="@mipmap/sy_sm"
                                    android:text="@string/receivable"
                                    android:textSize="@dimen/btn_verification_code" />

                                <TextView
                                    android:id="@+id/tv_receiptsAmt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/btn_content"
                                    android:textStyle="bold" />

                            </LinearLayout>


                            <View
                                android:layout_width="0dp"
                                android:layout_height="@dimen/qb_px_50"
                                android:layout_weight="0.01"
                                android:background="@color/button" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/transaction"
                                    android:textSize="@dimen/btn_verification_code" />

                                <TextView
                                    android:id="@+id/tv_penReceipts"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/btn_content"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                    </com.foorich.auscashier.view.shadowlayout.ShadowLinearLayout>


                    <com.foorich.auscashier.view.shadowlayout.ShadowLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/qb_px_80"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/qb_px_23"
                        android:layout_marginRight="@dimen/qb_px_23"
                        android:layout_marginTop="@dimen/qb_px_15"
                        android:background="#fff"
                        android:padding="1dp"
                        app:l_radius="3dp"
                        app:l_shadowAlpha="0.6"
                        app:l_shadowElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="用户充值金额（元）"
                                    android:textSize="@dimen/btn_verification_code" />

                                <TextView
                                    android:id="@+id/tv_rechargeAmt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/btn_content"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <View
                                android:layout_width="0dp"
                                android:layout_height="@dimen/qb_px_50"
                                android:layout_weight="0.01"
                                android:background="@color/button" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="用户充值笔数（笔）"
                                    android:textSize="@dimen/btn_verification_code" />

                                <TextView
                                    android:id="@+id/tv_penRecharge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/btn_content"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.foorich.auscashier.view.shadowlayout.ShadowLinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/qb_px_20" />

                </LinearLayout>

            </android.support.v4.widget.NestedScrollView>
        </com.foorich.auscashier.view.MyScrollView>
    </com.foorich.auscashier.view.refresh.library.TwinklingRefreshLayout>

</LinearLayout>