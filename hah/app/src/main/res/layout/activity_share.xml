<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.ShareActivity">


    <include layout="@layout/layout_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_50">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="扫一扫，立即体验祥付宝"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_10">

        <ImageView
            android:id="@+id/img_share"
            android:layout_width="@dimen/qb_px_294"
            android:layout_height="@dimen/qb_px_234"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/qb_px_13"
            android:textSize="@dimen/title_size" />

    </RelativeLayout>


    <Button
        android:id="@+id/btn_share"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="@dimen/qb_px_175"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/qb_px_40"
        android:background="@drawable/shape_share_bg"
        android:text="分享给好友"
        android:textColor="#F96C31"
        android:textSize="@dimen/title_size" />


</LinearLayout>