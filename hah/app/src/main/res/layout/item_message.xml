<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/qb_px_8"
    android:layout_marginLeft="@dimen/qb_px_15"
    android:layout_marginRight="@dimen/qb_px_15"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tv_message_img"
            android:layout_width="@dimen/qb_px_5"
            android:layout_height="@dimen/qb_px_5"
            android:layout_gravity="center"
            android:src="@drawable/shape_dot" />

        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/qb_px_10"
            android:text="关于系统升级的公告"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size" />

        <TextView
            android:id="@+id/tv_message_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:text="2018-07-20 10:50：30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_15"
        android:layout_marginTop="@dimen/qb_px_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_message_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="关于系统"
            android:textSize="@dimen/small_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/qb_px_16"
        android:layout_marginRight="@dimen/qb_px_13"
        android:layout_marginTop="@dimen/qb_px_10"
        android:background="@color/button" />
</LinearLayout>

