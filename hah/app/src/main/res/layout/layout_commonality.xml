<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_20"
        android:layout_marginRight="@dimen/qb_px_5"
        android:layout_marginTop="@dimen/qb_px_20">

        <TextView
            android:id="@+id/tv_commonality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="@dimen/title_size" />


        <ImageView
            android:layout_width="@dimen/qb_px_12"
            android:layout_height="@dimen/qb_px_12"
            android:layout_gravity="center"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:src="@mipmap/sy_jt" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="@dimen/qb_px_26"
        android:layout_marginRight="@dimen/qb_px_23"
        android:layout_marginTop="@dimen/qb_px_20"
        android:background="@color/button" />

</LinearLayout>