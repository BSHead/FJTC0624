<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activity.PaidActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="验证原登录密码"
                android:textColor="@color/black"
                android:textSize="@dimen/titleTop_size"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_26"
            android:layout_marginRight="@dimen/qb_px_26"
            android:layout_marginTop="@dimen/qb_px_58"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="原密码"
                android:textColor="@color/black"
                android:textSize="@dimen/title_size" />

            <com.foorich.auscashier.view.MClearEditText
                android:id="@+id/ed_changelogin_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:password="true"
                android:hint="请输入原登录密码"
                android:textColor="@color/black"
                android:textSize="@dimen/title_size"
                app:mClearEditText_showBottomLine="false" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="@dimen/qb_px_26"
            android:layout_marginRight="@dimen/qb_px_26"
            android:layout_marginTop="@dimen/qb_px_10"
            android:background="@color/button" />

        <Button
            android:id="@+id/btn_changelogin_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_10"
            android:background="@mipmap/button1"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size" />


    </LinearLayout>

</LinearLayout>