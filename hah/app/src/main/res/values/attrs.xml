<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MClearEditText">
        <!--是否展示底部线 : 默认显示 -->
        <attr name="mClearEditText_showBottomLine" format="boolean" />
        <!--底部线的颜色-->
        <attr name="mClearEditText_bottomLineColor" format="color" />
        <!--底部线的宽度-->
        <attr name="mClearEditText_bottomLineWidth" format="dimension" />
        <!-- 左边图片的大小 -->
        <attr name="mClearEditText_leftDrawableSize" format="dimension" />
        <!-- 是否显示右边删除按钮 :默认显示-->
        <attr name="mClearEditText_disableClear" format="boolean" />
        <!-- 右边图片的大小 -->
        <attr name="mClearEditText_rightDrawableSize" format="dimension" />
    </declare-styleable>

    //自定义密码输入框
    <declare-styleable name="SeparatedEditText">
        <attr name="password" format="boolean" />
        <attr name="showCursor" format="boolean" />
        <attr name="separateType" format="reference|integer" />
        <attr name="maxLength" format="integer" />
        <attr name="corner" format="dimension" />
        <attr name="borderColor" format="color|reference" />
        <attr name="blockColor" format="color|reference" />
        <attr name="textColor" format="color|reference" />
        <attr name="blockSpacing" format="dimension" />
        <attr name="cursorDuration" format="integer" />
        <attr name="cursorWidth" format="dimension" />
        <attr name="cursorColor" format="color|reference" />
        <attr name="borderWidth" format="dimension" />
    </declare-styleable>

    //设置支付密码底部线条
    <integer name="type_hollow">1</integer>
    <integer name="type_solid">2</integer>
    <integer name="type_underline">3</integer>


    //设置首页阴影部分
    <attr name="l_bottomDividerHeight" format="dimension" />
    <attr name="l_bottomDividerColor" format="color|reference" />
    <attr name="l_bottomDividerInsetLeft" format="dimension" />
    <attr name="l_bottomDividerInsetRight" format="dimension" />
    <attr name="l_topDividerHeight" format="dimension" />
    <attr name="l_topDividerColor" format="color|reference" />
    <attr name="l_topDividerInsetLeft" format="dimension" />
    <attr name="l_topDividerInsetRight" format="dimension" />
    <attr name="l_leftDividerWidth" format="dimension" />
    <attr name="l_leftDividerColor" format="color|reference" />
    <attr name="l_leftDividerInsetTop" format="dimension" />
    <attr name="l_leftDividerInsetBottom" format="dimension" />
    <attr name="l_rightDividerWidth" format="dimension" />
    <attr name="l_rightDividerColor" format="color|reference" />
    <attr name="l_rightDividerInsetTop" format="dimension" />
    <attr name="l_rightDividerInsetBottom" format="dimension" />
    <attr name="l_radius" format="dimension" />
    <attr name="l_borderColor" format="color" />
    <attr name="l_borderWidth" format="dimension" />
    <attr name="l_outerNormalColor" format="color|reference" />
    <attr name="l_hideRadiusSide" format="enum">
        <enum name="none" value="0" />
        <enum name="top" value="1" />
        <enum name="right" value="2" />
        <enum name="bottom" value="3" />
        <enum name="left" value="4" />
    </attr>
    <attr name="l_showBorderOnlyBeforeL" format="boolean" />
    <attr name="l_shadowElevation" format="dimension" />
    <!--<attr name="l_useThemeGeneralShadowElevation" format="boolean"/>-->
    <attr name="l_shadowAlpha" format="float" />
    <attr name="l_outlineInsetTop" format="dimension" />
    <attr name="l_outlineInsetLeft" format="dimension" />
    <attr name="l_outlineInsetRight" format="dimension" />
    <attr name="l_outlineInsetBottom" format="dimension" />
    <attr name="l_outlineExcludePadding" format="boolean" />

    <declare-styleable name="ShadowLayout">
        <attr name="android:maxWidth" />
        <attr name="android:maxHeight" />
        <attr name="android:minWidth" />
        <attr name="android:minHeight" />
        <attr name="l_bottomDividerHeight" />
        <attr name="l_bottomDividerColor" />
        <attr name="l_bottomDividerInsetLeft" />
        <attr name="l_bottomDividerInsetRight" />
        <attr name="l_topDividerHeight" />
        <attr name="l_topDividerColor" />
